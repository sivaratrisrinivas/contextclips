{
    "manifest_version": 3,
    "name": "Context Clips v4",
    "version": "4.0.0",
    "description": "Simple clipboard manager v4",
    "permissions": ["clipboardRead", "clipboardWrite", "storage", "sidePanel"],
    "background": {
        "service_worker": "src/background/service-worker.ts"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/content/content-script.ts"]
    }],
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "action": {
        "default_title": "Context Clips v4"
    },
    "icons": {
        "16": "public/icons/icon-16.png",
        "48": "public/icons/icon-48.png",
        "128": "public/icons/icon-128.png"
    }
}