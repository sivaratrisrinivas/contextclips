{
  "manifest_version": 3,
  "name": "Context Clips",
  "version": "1.0.0",
  "description": "Context-aware clipboard manager that intelligently organizes your copied content",
  "permissions": ["clipboardRead", "clipboardWrite", "storage", "sidePanel"],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.ts"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "Open Context Clips"
  },
  "icons": {
    "16": "public/icons/icon-16.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  }
}
