{
  "manifest_version": 3,
  "name": "Context Clips v4",
  "version": "4.0.0",
  "description": "Simple clipboard manager v4",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-script.ts-46bc1f5d.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "Context Clips v4"
  },
  "icons": {
    "16": "public/icons/icon-16.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/content-script.ts-46bc1f5d.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
